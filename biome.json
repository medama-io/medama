{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"files": {
		"ignore": [
			"types.d.ts",
			"**/dist"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"types.d.ts",
			"*.js",
			"bun.lock"
		],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownMediaFeatureName": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	}
}
