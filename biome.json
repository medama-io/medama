{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"files": {
		"includes": ["**", "!**/types.d.ts", "!**/dist"]
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"includes": ["**", "!**/types.d.ts", "!**/*.js", "!**/bun.lock"],
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnknownMediaFeatureName": "off"
			},
			"style": {
				"noDescendingSpecificity": "off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	}
}
